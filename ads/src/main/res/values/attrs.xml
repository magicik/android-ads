<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TemplateView">
        <attr name="gnt_template_type" format="reference" />
    </declare-styleable>
    <declare-styleable name="UnifiedBannerAdView">
        <attr name="provider" format="string" /> <!-- "admob" | "max" | "applovin" -->
        <attr name="bannerBackground" format="color" />

        <!-- AdMob -->
        <attr name="adUnitIdAdmob" format="string" />
        <attr name="admobAdSize" format="string" />
        <attr name="admobCollapsible" format="string" />

        <!-- AppLovin MAX -->
        <attr name="adUnitIdMax" format="string" />
        <attr name="maxUseAdaptiveHeight" format="boolean" />
        <attr name="maxFixedHeightDp" format="integer" />
    </declare-styleable>
</resources>